{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "~/components/*": ["./components/*"],
      "~/views/*": ["./views/*"],
      "~/pages/*": ["./pages/*"],
      "~/styles/*": ["./styles/*"],
      "~/layouts/*": ["./layouts/*"],
      "~/graphql/*": ["./graphql/*"],
      "~/providers/*": ["./providers/*"],
      "~/config/*": ["./config/*"],
      "~/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
